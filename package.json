{
  "name": "sumo-cli",
  "version": "0.1.0",
  "type": "module",
  "description": "Professional CLI tool for sumo rikishi data extraction and processing",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsdown",
    "start": "node dist/index.js",
    "dev": "tsdown --watch",
    "cli": "tsx src/cli/index.ts",
    "link": "npm link",
    "unlink": "npm unlink -g sumo-cli",
    "install-local": "npm run build && npm run link",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "docker:build": "docker build -t sumo-cli .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t sumo-cli:dev .",
    "docker:run": "docker run --rm -v $(pwd)/output:/app/output -v ~/.sumo-cli:/home/sumo-cli/.sumo-cli sumo-cli",
    "docker:dev": "docker-compose up sumo-cli-dev",
    "docker:prod": "docker-compose up sumo-cli",
    "docker:clean": "docker system prune -f && docker image prune -f",
    "docker:logs": "docker logs sumo-cli",
    "docker:shell": "docker run --rm -it -v $(pwd)/output:/app/output -v ~/.sumo-cli:/home/sumo-cli/.sumo-cli sumo-cli sh",
    "docker:stats": "docker run --rm -v $(pwd)/output:/app/output -v ~/.sumo-cli:/home/sumo-cli/.sumo-cli sumo-cli stats",
    "docker:matchups": "docker run --rm -v $(pwd)/output:/app/output -v ~/.sumo-cli:/home/sumo-cli/.sumo-cli sumo-cli matchups",
    "docker:list": "docker run --rm sumo-cli list",
    "docker:help": "docker run --rm sumo-cli --help"
  },
  "bin": {
    "sumo-cli": "./dist/index.js"
  },
  "keywords": [
    "rikishi",
    "sumo",
    "data"
  ],
  "author": "Ryan Kane",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.1.2",
    "commander": "^14.0.1",
    "puppeteer": "^24.22.0",
    "wanakana": "^5.3.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "^3.2.4",
    "domhandler": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
